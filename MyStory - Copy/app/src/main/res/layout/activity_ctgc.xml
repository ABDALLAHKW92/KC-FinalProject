<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dead"
    tools:context=".CTGC">


    <androidx.cardview.widget.CardView
        android:id="@+id/CV"
        android:layout_width="match_parent"
        android:layout_height="439dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#16FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/CategoryText2"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="200dp"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nametext2"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/lengthText2"
            android:layout_width="237dp"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nextext"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="315dp"
            android:text="التالي"
            android:textAlignment="textEnd"
            android:textColor="#0784b5"
            android:textSize="28sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="20dp"
            android:text="الاسم:"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/lengthtext"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="100dp"
            android:text="المدة (دقائق):"
            android:textAlignment="textStart"
            android:textColor="@color/white"

            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/backtext"
            android:layout_width="78dp"
            android:layout_height="47dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="315dp"
            android:text="السابق"
            android:textColor="#0E8DBF"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/categorytext"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="200dp"
            android:text="التصنيف:"
            android:textAlignment="textStart"
            android:textColor="@color/white"

            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <Button

            android:id="@+id/watchbutton"
            android:layout_width="200dp"
            android:layout_height="73dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:backgroundTint="#16FFFFFF"
            android:text="مشاهدة القصة"
            android:textSize="30sp" />


    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="161dp"

        android:layout_height="135dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="504dp"
        android:background="#16FFFFFF"
        android:backgroundTint="#16FFFFFF"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/channels4_profile__1__removebg_preview" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="199dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="547dp"
        android:background="#16FFFFFF"
        android:backgroundTint="#16FFFFFF"
        android:backgroundTintMode="add"
        android:text="أحمد الشمري"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp" />


</RelativeLayout>

