<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C3879"
    tools:context=".Login">

    <ProgressBar
        android:id="@+id/Barood"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="289dp" />

    <TextView
        android:id="@+id/Reg"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="36dp"
        android:background="#16FFFFFF"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="48sp" />






    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#16FFFFFF"
        android:text="Login"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/PassLog"
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="287dp"
        android:background="#16FFFFFF"
        android:ems="10"
        android:hint="Password"

        android:shadowColor="@color/white"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="28sp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/EmailLog"
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="449dp"
        android:background="#16FFFFFF"
        android:ems="10"
        android:hint="Email"

        android:inputType="textEmailAddress"
        android:shadowColor="@color/white"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="272dp"
        android:layout_height="180dp"
        android:layout_above="@+id/EmailLog"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="17dp"
        app:srcCompat="@drawable/f911d38579709636499618b6b3d9b6f6" />
</RelativeLayout>