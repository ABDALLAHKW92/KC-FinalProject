<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C3879"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/Btm"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#16FFFFFF">

        <ImageView
            android:id="@+id/Chosen"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            app:srcCompat="@drawable/ic_person" />

        <ImageView
            android:id="@+id/mystory2"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_format_list_numbered_rtl_24" />

        <ImageView
            android:id="@+id/Personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="240dp"
            app:srcCompat="@drawable/ic_dashboard" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_above="@+id/Btm"
        android:layout_marginBottom="266dp"
        app:srcCompat="@drawable/_79156" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="2dp"
        android:background="#16FFFFFF"
        android:text="MyAccount"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btm"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="182dp"
        android:background="#16FFFFFF"
        android:text="MyAccount"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/UserEmail"
        android:layout_width="353dp"
        android:layout_height="57dp"
        android:layout_above="@+id/Btm"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="73dp"
        android:background="#16FFFFFF"
        android:text="MyAccount"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="28sp" />

</RelativeLayout>